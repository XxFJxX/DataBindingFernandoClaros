<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local ="clr-namespace:DataBindingFernandoClaros"
             x:Class="DataBindingFernandoClaros.MainPage">

    <ContentPage.BindingContext>
        <local:Alumno/>
    </ContentPage.BindingContext>
    <ScrollView>
        <VerticalStackLayout>
            <Entry x:Name="NombreAlumno" Text="{Binding Nombre}" Placeholder="Ingrese su nombre"/>
            <Label Text="{Binding MostrarNombre}"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
